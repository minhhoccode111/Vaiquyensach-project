extends layout

block content

  h1 #{title}

  p #[strong Book: ]
    a(href=bookinstance.book.url) #{bookinstance.book.title}
  p #[strong ID: ]
    a(href=bookinstance.url) #{bookinstance.id}
  p #[strong Status:] #{bookinstance.status}
  p!='<strong>Imprint: </strong>' + bookinstance.imprint 
  p #[strong Due back:] #{bookinstance.due_back_formatted}

  hr
  p Do you really want to delete this Book Instance?

  form(method='POST')
    div.form-group
      input#authorid.form-control(type='hidden', name='bookinstanceid', value=bookinstance.id )

    button.btn.btn-primary(type='submit') Delete
